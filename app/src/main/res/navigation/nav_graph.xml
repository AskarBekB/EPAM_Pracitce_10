<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="dev.androidbroadcast.notesapp.repository.NoteListFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_note_list">
        <action
            android:id="@+id/action_noteListFragment_to_noteDetailsFragment"
            app:destination="@id/noteDetailsFragment" />
        <action
            android:id="@+id/action_noteListFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/noteDetailsFragment"
        android:name="dev.androidbroadcast.notesapp.repository.NoteDetailsFragment"
        android:label="Note Details"
        tools:layout="@layout/fragment_note_details">
        <argument
            android:name="noteId"
            app:argType="integer" />
        <action
            android:id="@+id/action_noteDetailsFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/addNoteFragment"
        android:name="dev.androidbroadcast.notesapp.repository.AddNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add_note" />

    <fragment
        android:id="@+id/editNoteFragment"
        android:name="dev.androidbroadcast.notesapp.repository.NoteEditFragment"
        android:label="Edit Note"
        tools:layout="@layout/fragment_note_edit">
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>

</navigation>
